<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bingnanfeng02.privacydetection.Test.MainActivity"
    android:id="@+id/rl">
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_above="@+id/spaceview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/object_detection">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物体检测"
        android:layout_gravity="center"
        android:textColor="#ffffff"
         />
    </android.support.v7.widget.CardView>
    <View
        android:id="@+id/spaceview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"></View>
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_below="@+id/spaceview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/relationship_detection">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关系检测"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            />
    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:src="@drawable/setting"
        android:id="@+id/setting"/>
</RelativeLayout>
