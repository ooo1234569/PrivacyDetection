<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">
<include layout="@layout/toolbar">
</include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tb"
        android:background="#ffffff"
        android:id="@+id/set_privacy"
        >
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置隐私规则"
            android:layout_marginLeft="16dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/jinru"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/set_privacy"
        android:background="#ffffff"
        android:id="@+id/set_group"
        >
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理分组"
            android:layout_marginLeft="16dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/jinru"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/set_group"
        android:background="#ffffff"
        android:id="@+id/set_ip"
        >
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置服务器IP地址和端口号"
            android:layout_marginLeft="16dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/jinru"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>