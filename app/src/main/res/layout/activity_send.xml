<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="取消"
                android:layout_marginLeft="7dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:id="@+id/cancel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="发表"
                android:layout_marginRight="7dp"
                android:textColor="#66d546"
                android:textSize="18sp"
                android:id="@+id/send"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/appbar_layout"
        android:id="@+id/ll"
        >
    <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="75dp"-->
        <!--android:hint="说点什么"-->
        <!--android:background="@null"-->
        <!--/>-->
        <EditText
            android:id="@+id/add_content"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:background="@null"
            android:hint="说点什么....."

            >
        </EditText>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/img_headimg"
        android:layout_marginLeft="10dp"
            android:id="@+id/img"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
           />
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/add_img"
            android:id="@+id/add_img"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            /></RelativeLayout></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/ll"
        android:background="#ffffff"
        android:id="@+id/who"

        >
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/earth"
            android:layout_centerVertical="true"
            android:id="@+id/img_pyq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谁可以看"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/img_pyq"
            android:layout_centerVertical="true"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/jinru"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:layout_marginRight="7dp"
            android:text=""
            android:id="@+id/tx_permission"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/jinru"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/jinru"/>
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/who"
        android:background="#ffffff"
        android:id="@+id/juece"
        >
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:src="@drawable/juece"
            android:layout_centerVertical="true"
            android:id="@+id/img_juece"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看隐私决策推荐"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/img_juece"
            android:layout_centerVertical="true"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/img_juece2"/>
        <View
            android:layout_gravity="center"
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/juece"
        android:visibility="gone"
        android:id="@+id/ll_result">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私分类结果："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/fenlei"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私检测结果："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="#5b6a92"
                android:layout_marginLeft="7dp"
                android:id="@+id/lookmore"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私规则匹配："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/rule"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="#5b6a92"
                android:layout_marginLeft="7dp"
                android:id="@+id/ruleresult"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私泄露风险："/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:rating="1"
                android:isIndicator="true"
                android:stepSize="1"
                android:theme="@style/RatingBar"
                android:id="@+id/ratingbar"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片建议分组："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/advice_group"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建议查看权限："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/advice_level"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="以下为您有可能泄露隐私的以往微博"
            android:id="@+id/tixing"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/tixing"
        >
    </android.support.v7.widget.RecyclerView></RelativeLayout>
</RelativeLayout>